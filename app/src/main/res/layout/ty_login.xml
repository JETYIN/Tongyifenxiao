<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/login_bg"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ty_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dip"
                />


            <LinearLayout
                android:id="@+id/input_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dip"
                android:layout_below="@id/logo"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="50dip"
                    >

                    <ImageView
                        android:id="@+id/user_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/user_icon"
                        />

                    <EditText
                        android:id="@+id/userInput"
                        android:layout_toRightOf="@id/user_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:paddingRight="5dip"
                        android:paddingLeft="15dip"
                        android:hint="用户名或手机号码"
                        android:text="login_no666"
                        android:textColorHint="#e0999999"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#ffffff"
                        android:layout_alignParentBottom="true"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="50dip"
                    android:layout_marginRight="50dip"
                    >

                    <ImageView
                        android:id="@+id/pass_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/pass_icon"
                        />

                    <EditText
                        android:id="@+id/passInput"
                        android:layout_toRightOf="@id/pass_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:paddingRight="5dip"
                        android:paddingLeft="15dip"
                        android:hint="密码"
                        android:text="123456"
                        android:textColorHint="#e0999999"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#ffffff"
                        android:layout_alignParentBottom="true"
                        />


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_below="@id/input_area"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/btn_bg_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="登  录"
                    android:textColor="#F04641"
                    android:textSize="24sp"

                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="40dip"
                android:layout_below="@id/login_btn"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9b9b9b"
                    android:text="还没有账号?"
                    />
                <TextView
                    android:id="@+id/text2"
                    android:layout_marginLeft="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即注册"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
