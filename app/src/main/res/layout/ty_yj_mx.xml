<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="50dip"
        android:background="#F8F9FB"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="订单号"
            android:textSize="18sp"
            android:textColor="#F05B57"
            android:gravity="center"
            />

        <View
            android:background="@color/red"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="比例"
            android:textSize="18sp"
            android:textColor="#F05B57"
            android:gravity="center"
            />

        <View
            android:background="@color/red"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="金额"
            android:textSize="18sp"
            android:textColor="#F05B57"
            android:gravity="center"
            />

        <View
            android:background="@color/red"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="余额"
            android:textSize="18sp"
            android:textColor="#F05B57"
            android:gravity="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/view1"
        android:layout_marginTop="94dip"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@drawable/white_round_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="12dip"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/pid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-11-24"
                    android:layout_marginTop="5dip"
                    android:layout_below="@id/pid"
                    android:textSize="12sp"
                    android:gravity="center"
                    />



            </RelativeLayout>

            <TextView
                android:id="@+id/statue"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="转入"
                android:textSize="16sp"
                android:textColor="#F05B57"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/opare"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+200"
                android:textSize="16sp"
                android:textColor="#F05B57"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/yue"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1200"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="#F8F9FB"
            />

    </RelativeLayout>

    <cn.qmz.tools.view.listview.PullRefreshListView
        android:id="@+id/yj_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_marginTop="94dip"
        >


    </cn.qmz.tools.view.listview.PullRefreshListView>

</RelativeLayout>
