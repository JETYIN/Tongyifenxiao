<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_title_bar_height"
        android:orientation="vertical"
        />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_title_bar_height"
    >

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:layout_marginTop="20dip"
            android:background="@color/white">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/out_gray_white_in_round_shape"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dip"
                android:layout_marginLeft="15dip"
                android:hint="分销商名称"
                android:textColorHint="#9b9b9b"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:background="@color/white">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/out_gray_white_in_round_shape"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dip"
                android:layout_marginLeft="15dip"
                android:hint="法人名称"
                android:textColorHint="#9b9b9b"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dip"
            android:background="@color/white">


            <TextView
                android:id="@+id/zz_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_centerVertical="true"
                android:text="营业执照照片:"
                />

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/zz_photo_text"
                android:scaleType="centerCrop"
                android:src="@mipmap/dwsc"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:background="@color/white">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/out_gray_white_in_round_shape"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dip"
                android:layout_marginLeft="15dip"
                android:hint="法人名称"
                android:textColorHint="#9b9b9b"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dip"
            android:background="@color/white">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/out_gray_white_in_round_shape"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dip"
                android:layout_marginLeft="15dip"
                android:hint="法人身份证号码"
                android:textColorHint="#9b9b9b"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dip"
            android:background="@color/white">


            <TextView
                android:id="@+id/fr_sfz_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_centerVertical="true"
                android:text="法人身份证照片:"
                />

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/fr_sfz_photo_text"
                android:scaleType="centerCrop"
                android:src="@mipmap/dwsc"
                />

        </RelativeLayout>

        <!-- button -->

        <LinearLayout
            android:id="@+id/btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp" >

                <Button
                    android:id="@+id/ok"
                    style="@style/common_red_btn_normal_style"
                    android:background="@drawable/red_round_item"
                    android:text="上一步" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp" >

                <Button
                    android:id="@+id/next"
                    style="@style/common_red_btn_normal_style"
                    android:background="@drawable/red_round_item"
                    android:text="下一步" />
            </RelativeLayout>

            <!-- end -->

        </LinearLayout>



    </LinearLayout>

</ScrollView>

</RelativeLayout>
