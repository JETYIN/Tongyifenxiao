<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:pro="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_height="wrap_content">

        <cn.qmz.tools.view.image.CircleImageView
            android:id="@+id/item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/avater_icon"
            pro:border_color="@color/white"
            pro:border_width="2.0dip" />

        <ImageView
            android:id="@+id/indicate_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_toRightOf="@id/item_image"
            android:src="@drawable/update_hint"
            android:visibility="gone" />

    </RelativeLayout>

    

</RelativeLayout>